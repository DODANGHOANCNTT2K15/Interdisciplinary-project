public class UserConfig {
  @Bean
  public UserDetailsServiceImpl userDetailsService() {
    InMemoryUserDetailsManager userDetailsManager = new InMemoryUserDetailsManager();

    // Tạo người dùng với role "USER"
    

  }
}
